$green: #5CB85C;
$white_opacity: rgba(255, 255, 255, 0.7);
$open: <%= Trail::COLOR_OPEN %>;
$closed: <%= Trail::COLOR_CLOSED %>;

body {
  padding-bottom: 20px;
  font-family: 'Titillium Web', sans-serif;
  background: image-url('css/pw_pattern.png') #e0e0e0;
}

hr {
  border-top: 1px solid #e5e5e5;
}

p.text-centered {
  text-align: center;
}

.top {
  background-color: $green;

  .header {
    padding: 20px 0;
    color: #fff;

    .navbar {
      margin-bottom: 0;

      ul.nav li.active a, ul.nav li a:hover {
        background-color: #fff;
        color: $green;
      }

      .navbar-toggle {
        border-color: #ddd;
        background-color: #fff;

        .icon-bar {
          background-color: $green;
        }
      }

      ul.nav li.dropdown.open {
        background-color: #fff;
        border-radius: 4px;

        a {
          color: $green;
          background-color: #fff;
          border-color: #f00;
        }

        ul.dropdown-menu {
          z-index: 10000;

          a:hover {
            background-color: #eee;
          }
        }
      }

      a {
        color: #fff;
        font-size: 14px;
      }

      a.navbar-brand { font-size: 24px; }
    }
  }

  .alert {
    margin: 0;
    border-radius: 0;

    p {
      margin: 0;
    }
  }
}

.footer {
  margin-top: 20px;
  color: #777;
  padding-top: 19px;
  border-top: 1px solid #e5e5e5;
}

.full-panel {
  padding: 20px;
  background-image: image-url('bike-bw.jpg');
  background-position: center;
  background-size: cover;
}

.jumbotron {
  padding: 30px;
  background-color: $white_opacity;
  margin-bottom: 0;

  h1 { font-size: 55px; }

  h2 { margin-top: 0 }
}

@media (min-width: 768px) {
  .container { max-width: 730px; }
}

.trail-status-tabs {
  .selected {
    background-color: #e6e6e6;
  }
}

table.statuses {
  tr.trail {
    margin-bottom: 10px;

    td {
      vertical-align: middle !important;
      border: none !important;
      padding: 20px !important;

      &.date { text-align: right; }

      h3 {
        display: inline;

        a { color: #333; }
      }

      i.open { color: $open; }

      i.closed { color: $closed; }
    }
  }
}

.meta {
  background-color: #fff;

  .loop { display: none; }

  h2 {
    margin-top: 10px;

    a { color: #333; }
  }

  h3 {
    color: #888;
  }
}

.map-container {
  height: 400px;

  .map-legends {
    .map-legend {
      font-size: 14px;
      padding: 1px 10px;

      a {
        color: $green;
        margin-bottom: 0;
      }
    }
  }

  .map { height: 100%; }
}

.jumbotron.form {
  padding: 30px 140px;
}

@media only screen and (min-width: 320px) and (max-width: 600px) {
  .top {
    .header {
      padding: 10px 0;

      h3 { font-size: 20px; }
    }
  }

  .map-container {

    .meta h2 {
      margin: 5px 0;
      line-height: 0.8em;
      text-align: center;

      small { display: block; }
    }
  }

  .full-panel .container { padding: 0; }

  .container > h2 {
    text-align: center;
    font-size: 23px;
  }

  table.statuses {
    tr.trail {
      h3 { font-size: 16px; }

      td {
        padding: 10px !important;

        &.name { padding-right: 0 !important; }

        &.date { padding-left: 0 !important; }
      }
    }
  }

  .jumbotron, .jumbotron.form {
    padding: 20px;

    h1 { font-size: 34px; }

    h2 { font-size: 22px; }

    p { font-size: 16px; }
  }
}

body.home.oops {
  .jumbotron {
    p {
      font-size: 16px;

      &.action { text-align: center; }
    }
  }
}

body.home.index {
  .jumbotron {
    text-align: center;

    p { color: #555; }
  }
}

body.home.index, body.trails.index {
  .map {
    height: 400px;

    .leaflet-popup h2 a { color: $green; }

    .leaflet-popup h3 { margin-bottom: 0; }
  }
}

body.trails.show {
  .photos {
    .photo {
      margin-bottom: 10px;
    }
  }
  .weather {
    background-color: #e0e0e0;

    p.credit {
      font-size: 0.9em;
      text-align: right;
      margin-bottom: 20px
    }
  }

  .forecast {
    border-radius: 4px;
    border: 1px solid #ccc;
    padding: 10px;
    background-color: #f8f8f8;
    margin-bottom: 10px;

    h4 {
      text-align: center;;
    }

    .temp {
      text-align: center;
      font-size: 2em;
      line-height: 1em;

      &.high {
        color: #A94442;
        margin-bottom: 0px;
      }

      &.low {
        color: #33A3B7;
      }
    }

    p.summary {
      margin-top: 10px;
    }
  }

  @media only screen and (min-width: 320px) and (max-width: 667px) {
    .map-container {
      height: 250px;
    }

    .forecast h4 {
      font-size: 2em;
    }
  }
}

body.registrations.edit {
  .jumbotron {
    p {
      font-size: 1.1em;
    }
  }
}

.map .leaflet-popup h1,
.map .leaflet-popup h2,
.map .leaflet-popup h3,
.map .leaflet-popup h4,
.map .leaflet-popup h5 { text-align: center; }
